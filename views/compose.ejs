<%- include("partials/header") -%>
<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class = "form-group">
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input class="form-control" name="title" placeholder="Post Title">
    </div>
    <div class="mb-3">
      <label class="form-label">Post</label>
      <textarea class="form-control" name="postContent" rows="5" cols="30"></textarea>
    </div>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>
